#include <iostream>
#include <QApplication>
#include <QWidget>
#include <QLabel>
#include <QPushButton>

using namespace std;

void test(){
	cout << "Hello" << endl;
}

int main(int argc, char **argv){
	QApplication window(argc, argv);

	QWidget *mainwindow = new QWidget;

	mainwindow->setWindowTitle("Hello Qt!");
	mainwindow->setMaximumSize(640, 480);
	mainwindow->setMinimumSize(240, 120);
	mainwindow->resize(640, 480);

	QLabel *myLabel = new QLabel("Hello Qt!", mainwindow);
	myLabel->setTextFormat(Qt::PlainText);
	myLabel->setGeometry(30, 30, 120, 60);

	QPushButton *myButton = new QPushButton("Poti ttona!", mainwindow);
	myButton->resize(180, 30);
	myButton->move(300, 20);
	QObject::connect(myButton, SIGNAL(clicked()), qApp, SLOT(quit()));
	
	mainwindow->show();
	return window.exec();
}






